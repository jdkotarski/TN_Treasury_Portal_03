@page "/"
@namespace TN_Treasury_Portal_03.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<component type="typeof(App)" render-mode="ServerPrerendered" />
<script>
    function insertAddContentForm() {
        document.getElementById("addContentFormContainer").innerHTML = "Hello world!";
    }
    function insertFAQ(qToString) {
        var existingContent = document.getElementById("FAQContainer").innerHTML;
        var newContent = existingContent + qToString;
        document.getElementById("FAQContainer").innerHTML = newContent;
    }
</script>