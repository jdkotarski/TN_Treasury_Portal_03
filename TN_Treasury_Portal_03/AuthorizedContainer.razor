@inject IJSRuntime JSRuntime
<!--AuthorizedContainer component only visible to authorized users-->

<!--Shows or hides the form for adding FAQs to the page-->
<button class="btn btn-primary" @onclick="DisplayAddContentForm">
    @if (AddContentFormHidden)
    {
        <span>Add FAQ Content...</span>
    }
    else
    {
        <span>Done Adding Content</span>
    }
</button>
<div id="addContentFormContainer" hidden="@AddContentFormHidden">
    <AddContentForm></AddContentForm>
</div>
@code {
    // Reveals existing form when button is clicked
    private bool AddContentFormHidden { get; set; } = true;
    private void DisplayAddContentForm()
    {
        AddContentFormHidden = !AddContentFormHidden;
    }

}
